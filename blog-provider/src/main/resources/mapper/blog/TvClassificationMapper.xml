<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dazhi.blogprovider.blog.mapper.TvClassificationMapper">


    <!-- 使用resultMap映射实体类和字段之间的一一对应关系 -->
    <resultMap type="com.dazhi.blogprovider.blog.entity.TvClassification" id="TvClassification">
        <id property="id" column="id"/>
        <collection property="child" column="id" ofType="com.dazhi.blogprovider.blog.entity.TvClassification" select="getChild"/>
    </resultMap>

    <select id="getWithDetailByLevel" resultMap="TvClassification">
        select * from tv_classification where level = #{level}
    </select>

    <select id="getChild" parameterType="Long" resultType="com.dazhi.blogprovider.blog.entity.TvClassification">
        SELECT * FROM tv_classification WHERE pid=#{id}
    </select>
</mapper>
